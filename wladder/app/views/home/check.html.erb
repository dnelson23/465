<%= link_to 'Play Again', '/' %>
</br>
</br>
<strong>Your Guess</strong>
<table>
	<tbody>
		<tr>
			<td>Start</td>
			<td><%= @startWord %></td>
		</tr>
		<% for i in 2..6 do %>
		<% if @words[i] != "" %>
		<tr>
			<td>Step <%= i-1 %>:</td>
			<td><%= @words[i] %></td>
		</tr>
		<% end %>
		<% end %>
		<tr>
			<td>End:</td>
			<td><%= @goalWord %>
		</tr>
	</tbody>
</table>

<% if @didWin %>
<h2>Congrats? You won</h2>
<% else %>
<h2>Sorry, you lose. Loser.</h2>
<% end %>

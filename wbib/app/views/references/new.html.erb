<div class="row">
    <div class="col-xs-12">
        <div class="centered">
            <h1>Create a new reference for <%= @topic.title %></h1>
            <div class="col-xs-12">
                <%= form_for :reference, url: {action: "create"} do |r| %>
                    <div class="form-group">
                        <div class="col-xs-1 text-right"><%= r.label :url %></div>
                        <div class="col-xs-11"><%= r.text_field :url, :class => "form-control" %></div>
                    </div>
                    </br>
                    <%= r.submit "Save", :class => "btn btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
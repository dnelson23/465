<div class="row">
    <div class="col-xs-12 well well-lg">
        <h1><%= @smasher.tag %></h1>
        <div class="row">
            <div class="col-xs-3">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a data-toggle="pill" href="#overview">Overview</a></li>
                    <li><a data-toggle="pill" href="#wins">Wins</a></li>
                    <li><a data-toggle="pill" href="#losses">Losses</a></li>
                    <li><a data-toggle="pill" href="#tournaments">Tournaments</a></li>
                </ul>
            </div>
            <div class="col-xs-9">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="overview">
                        <h2 class="inline">Overview</h2>
                        <h4 class="inline">Career Wins: <span class="green"><%= @smasher.wins.count %></span></h4>
                        <h4 class="inline">Career Losses: <span class ="challonge-orange"><%= @smasher.losses.count %></span></h4>
                        <div class="col-xs-12">
                            <h3>Wins</h3>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <td>Opponent</td>
                                        <td>Tournament</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @smasher.wins.each do |win| %>
                                        <tr>
                                            <td><span class="green"><%= win.loser.tag %></span></td>
                                            <td><%= win.tournament.name %></td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xs-12">
                            <h3>Losses</h3>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <td>Opponent</td>
                                        <td>Tournament</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @smasher.losses.each do |loss| %>
                                        <tr>
                                            <td><span class="challonge-orange"><%= loss.winner.tag %></span></td>
                                            <td><%= loss.tournament.name %></td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="wins">
                        <h2>Wins</h2>
                        <div class="col-xs-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <td>Opponent</td>
                                        <td>Tournament</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @smasher.wins.each do |win| %>
                                        <tr>
                                            <td><span class="green"><%= win.loser.tag %></span></td>
                                            <td><%= win.tournament.name %></td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="losses">
                        <h2>Losses</h2>
                        <div class="col-xs-12">
                             <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <td>Opponent</td>
                                        <td>Tournament</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @smasher.losses.each do |loss| %>
                                        <tr>
                                            <td><span class="challonge-orange"><%= loss.winner.tag %></span></td>
                                            <td><%= loss.tournament.name %></td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="tournaments">
                        <h2>Tournaments</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>